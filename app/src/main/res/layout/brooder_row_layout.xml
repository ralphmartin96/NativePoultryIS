                    android:layout_height="40dp"
                    android:text="Pen"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/brooder_pen_number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="B00"
                    android:textSize="25dp"
                    android:layout_marginLeft="5dp"
                    />

          <!--      <ImageButton
